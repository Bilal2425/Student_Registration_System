@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Welcome to the Home Page</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>Hello, @User.Identity.Name!</p>
    <p><a asp-page="/Logout">Logout</a></p>
}
else
{
    <p>
        If you are already registered, please <a asp-page="/Login">login</a>.
        If you are a new user, please <a asp-page="/Register">register</a>.
    </p>
}
