@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" />

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div>
        <label>Username:</label>
        <input name="Username" />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="Password" />
    </div>
    <button type="submit">Login</button>
</form>
